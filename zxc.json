{
    "title": "sanam's Hyper with capslock",
    "maintainers": [
      "sanam"
    ],
    "author": "simian114@gmail.com",
    "rules": [
        {
            "description": "Hyper zxc edit",
            "manipulators": [
              {
                "description": "z == shift option left arrow",
                "type": "basic",
                "from": {
                  "key_code": "z",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow",
                    "modifiers": [
                        "left_option",
                        "left_shift"
                      ]
                  }
                ]
              },
              {
                "description": "command z == shift option left arrow",
                "type": "basic",
                "from": {
                  "key_code": "z",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow",
                    "modifiers": [
                        "left_command",
                        "left_shift"
                      ]
                  }
                ]
              },

              {
                "description": "c == shift option right arrow",
                "type": "basic",
                "from": {
                  "key_code": "c",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow",
                    "modifiers": [
                        "left_option",
                        "left_shift"
                    ]
                  }
                ]
              },
              {
                "description": "command c == shift option right arrow",
                "type": "basic",
                "from": {
                  "key_code": "c",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow",
                    "modifiers": [
                        "left_command",
                        "left_shift"
                      ]
                  }
                ]
              },
              {
                "description": "x == backspace",
                "type": "basic",
                "from": {
                  "key_code": "x",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace"
                  }
                ]
              },
              {
                "description": "command x == command x",
                "type": "basic",
                "from": {
                  "key_code": "x",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace",
                    "modifiers": [
                      "left_command"
                    ]
                  }
                ]
              },
              {
                "description": "option x == command v",
                "type": "basic",
                "from": {
                  "key_code": "x",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "v",
                    "modifiers": [
                      "left_command"
                    ]
                  }
                ]
              }
            ]
        }
    ]
}
  