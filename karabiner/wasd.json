{
    "title": "sanam's Hyper with capslock",
    "maintainers": [
      "sanam"
    ],
    "author": "simian114@gmail.com",
    "rules": [
        {
            "description": "Hyper wasd Navigation",
            "manipulators": [
              {
                "description": "a == left arrow",
                "type": "basic",
                "from": {
                  "key_code": "a",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow"
                  }
                ]
              },
              {
                "description": "d == right arrow",
                "type": "basic",
                "from": {
                  "key_code": "d",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow"
                  }
                ]
              },
              {
                "description": "w == Up arrow",
                "type": "basic",
                "from": {
                  "key_code": "w",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "up_arrow"
                  }
                ]
              },
              {
                "description": "s == down arrow",
                "type": "basic",
                "from": {
                  "key_code": "s",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "down_arrow"
                  }
                ]
              },

              {
                "description": "command + w == shift w",
                "type": "basic",
                "from": {
                  "key_code": "w",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "up_arrow",
                    "modifiers": [
                        "left_command"
                    ]
                  }
                ]
              },
              {
                "description": "command + s == shift s",
                "type": "basic",
                "from": {
                  "key_code": "s",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "down_arrow",
                    "modifiers": [
                        "left_command"
                    ]
                  }
                ]
              },
              {
                "description": "command + d == shift d",
                "type": "basic",
                "from": {
                  "key_code": "d",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow",
                    "modifiers": [
                        "left_command"
                    ]
                  }
                ]
              },
              {
                "description": "command + a == shift a",
                "type": "basic",
                "from": {
                  "key_code": "a",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow",
                    "modifiers": [
                        "left_command"
                    ]
                  }
                ]
              },
              {
                "description": "option + a == shift a",
                "type": "basic",
                "from": {
                  "key_code": "a",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow",
                    "modifiers": [
                        "left_option"
                    ]
                  }
                ]
              },
              {
                "description": "option + d == shift d",
                "type": "basic",
                "from": {
                  "key_code": "d",
                  "modifiers": {
                    "mandatory": [
                      "right_command",
                      "right_control",
                      "right_shift",
                      "right_option",
                      "left_option"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow",
                    "modifiers": [
                        "left_option"
                    ]
                  }
                ]
              }
            ]
        }
    ]
}
  