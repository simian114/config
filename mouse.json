{
  "title": "sanam's Hyper with capslock",
  "maintainers": [
    "sanam"
  ],
  "author": "simian114@gmail.com",
  "rules": [
    {
      "description": "Hyper mouse",
      "manipulators": [
        {
          "description": "mouse left(j)",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "x": -2000
              }
            }
          ]
        },
        {
          "description": "mouse up(i)",
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option",
                "left_command"
              ]
            }
