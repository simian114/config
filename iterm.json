{
  "title": "sanam's Hyper with capslock",
  "maintainers": ["sanam"],
  "author": "simian114@gmail.com",
  "rules": [
    {
      "description": "Hyper iterm",

      "manipulators": [
        {
          "description": "p",
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.googlecode\\.iterm$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "p",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
